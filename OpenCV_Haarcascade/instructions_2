info.dat


import os
path_pos='/home/rubensvectomobile_gmail_com/triotec/classifier/positive_images'
path_neg='/home/rubensvectomobile_gmail_com/triotec/classifier/negative_images'
for img in os.listdir(path_pos):
    line = path_pos+'/'+img+' 1 0 0 50 50\n'
    with open('/home/rubensvectomobile_gmail_com/triotec/classifier/info.dat','a') as f:
        f.write(line)


for img in os.listdir(path_neg):
    line = path_neg+'/'+img+'\n'
    with open('/home/rubensvectomobile_gmail_com/triotec/classifier/bg.txt','a') as f:
        f.write(line)

